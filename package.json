{
  "name": "multilife",
  "version": "1.0.0",
  "description": "Multiplayer game of life",
  "main": "server.js",
  "repository": "https://github.com/multilife",
  "author": "John Merchant <john@merchant.on.net>",
  "license": "MIT",
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@giantmachines/redux-websocket": "^1.1.2",
    "color": "^3.1.2",
    "color-namer": "^1.3.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-github-corner": "^2.3.0",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "use-debounce": "^2.1.0",
    "ws": "^7.0.1"
  },
  "scripts": {
    "test": "tsc && jest",
    "clean": "rimraf dist/",
    "build-client": "parcel build client/index.html --out-dir dist/client",
    "dev-client": "parcel serve client/index.html --out-dir dist/client",
    "build-server": "tsc --outDir dist/server && cpx process.yml dist/server/",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "dev-server": "npm run clean && npm run build-server && node dist/server/server"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/color-namer": "^1.3.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.7",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/ws": "^6.0.1",
    "cpx": "^1.5.0",
    "jest": "^24.8.0",
    "parcel": "^1.12.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  }
